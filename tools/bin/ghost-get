#!/usr/bin/env bash
set -euo pipefail

# Get a Ghost CMS post by ID.
#
# Usage:
#   ghost-get <post_id>
#
# Requires: GHOST_URL, GHOST_ADMIN_API_KEY in environment or .env

source "$(dirname "${BASH_SOURCE[0]}")/_common.sh"

POST_ID="${1:?Usage: ghost-get <post_id>}"

exec "$PYTHON" "$CLIENT" get "$POST_ID"
